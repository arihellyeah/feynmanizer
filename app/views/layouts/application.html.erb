<!DOCTYPE html>
<html>
  <head>
    <title>Feynmanizer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class='row top'>
      <div class='col-2'>
        <%= link_to image_tag("feynman.png",  alt: "Feynman", class: "feynman-img"), root_path %>
      </div>
      <div class="col-4 tagline">
        Complex concepts boiled down with the Feynman technique.
      </div>
      <div class="col-6 links">

          <%= link_to 'Contribute', new_fact_path, class: 'no-drop' %>
          <%= link_to 'About', about_path , class: 'no-drop' %>

        <div class="dropdown">
          <button class="dropbtn">Categories</button>
          <div class="col-3 dropdown-content">
            <%= link_to 'Coding', facts_path({category:"coding"}) %>
            <%= link_to 'Science', facts_path({category:"science"}) %>
            <%= link_to 'Other', facts_path({category:"other"}) %>
          </div>
        </div>
            <% if user_signed_in? %>
              <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'no-drop' %>
            <% else %>
              <%= link_to 'Sign in', user_session_path, class: 'no-drop' %>
              <%= link_to 'Sign Up', new_user_registration_path, class: 'no-drop' %>
            <% end %>
      </div>
    </header>

    <% if notice.present? %>
      <p class="alert alert-info"><%= notice %></p>
    <% end %>
    <% if alert.present? %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <br class='clear'>
    <div class="container">
      <% if flash[:error].present? %>
        <div class="col-10 offset-1 alert alert-danger">
          <%= flash[:error].html_safe %>
        </div>
      <% end %>
      <%= yield %>
    </div>
<br>
<br>
    <div class="footer">
      <div class="container">
        <div class="row">

          <div class="col-12 footer-blurb">
            Proudly hacked by <a href="https://arieloring.netlify.com/">Arielle Loring.</a><br />
          </div>

        </div>

      </div>

    </div>


    <% yield %>
  </body>
</html>
