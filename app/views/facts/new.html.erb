<div class="form">
<h1>Pour your knowledge.</h1>
<br>
<%= simple_form_for @fact do |f| %>
  <%= f.input :title, label: 'What\'s the concept?' %>
  <br>
  <%= f.input :blurb, label: 'How would you explain it to a child?'%>
  <br>

  <%= f.input :category, as: :radio_buttons, collection: [['coding', 'Coding'], ['science', 'Science'], ['other', 'Other']], label_method: :second, value_method: :first %>
  <%= f.submit 'Create', class: 'btn btn-info' %>

<% end %>
</div>
